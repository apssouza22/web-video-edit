{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["assets/js/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "assets/js/**/*.ts",
    "assets/js/**/*.js",
    "env.d.ts",
    "vite.config.ts",
    "index.html"
  ],
  "exclude": ["node_modules", "tests"]
}
